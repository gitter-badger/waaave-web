extends explore/__explore

- load staticfiles page

block title
  | Explore the Tutorials

block stylesheets
  | {{ block.super }}
  link(rel='stylesheet' href='{% static "assets/explore/stylesheets/explore_tutorials.css" %}', type='text/css')

block javascripts
  | {{ block.super }}

block extra_head

block navigation
  include explore/_explore_navigation
  include explore/_explore_tutorials_navigation

block explore
  if items
    .items-wrapper
      .items
        for tutorial in items
          include explore/_explore_tutorials_item

  else
    .alert
      span.icon
      | There is not tutorial. Want to publish something?

  | {% pagination explore_view explore_page explore_page_total %}
